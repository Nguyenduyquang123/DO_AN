@using DO_AN_PTUD.Models;
@model IList<Product>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<main id="main" class="main">
    <h3>Danh sách Sản phẩm</h3>

    <p>
        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Product" asp-action="Create">
            <i class="bi bi-file-earmark me-1">Thêm</i>
        </a>
    </p>
    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body mt-4">
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th class="col-1 text-center">#</th>
                                    <th class="col-3 text-center">Tên sản phẩm</th>
                                    <td class="col-1 text-center">Giá gốc</td>
                                    <td class="col-1 text-center">Giá còn</td>
                                    <td class="col-1 text-center">Giảm giá</td>
                                    <td class="col-1 text-center">Menu cha</td>
                                    <td class="col-1 text-center">Vị trí</td>
                                    <td class="col-1 text-center">Ẩn hiện</td>
                                    <th class="col-2 text-center">Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th class="text-center" scope="row">@item.ProductID</th>
                                        <td style="text-align: center;">
                                            <a asp-area="Admin" asp-controller="Menu" asp-action="Details"
                                           asp-route-id="@item.ProductID" class="text-primary" >@item.Title</a>
                                        </td>
                                        <td class="text-center">@item.Price</td>
                                        <td class="text-center">@item.Discount</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-center">@item.MenuID</td>
                                        <td class="text-center">@item.Status</td>
                                        <td class="text-center">@item.IsActive</td>
                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Edit"
                                           asp-route-id="@item.ProductID" class="btn btn-primary btn-sm"
                                           title="Sửa nội dung bài viết">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-area="Admin" asp-controller="Product" asp-action="Delete"
                                           asp-route-id="@item.ProductID" class="btn btn-danger btn-sm"
                                           title="Xóa thông tin bài viết">
                                                <i class="bi bi-trash"></i>
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    </div>

</main>
